<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ca.sait.project.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ca.sait.project.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ca.sait.project.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUserAccountServlet</servlet-name>
        <servlet-class>ca.sait.project.servlets.ManageUserAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageInventoryServlet</servlet-name>
        <servlet-class>ca.sait.project.servlets.ManageInventoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUsersServlet</servlet-name>
        <servlet-class>ca.sait.project.servlets.ManageUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCategoriesServlet</servlet-name>
        <servlet-class>ca.sait.project.servlets.ManageCategoriesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUserAccountServlet</servlet-name>
        <url-pattern>/useraccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageInventoryServlet</servlet-name>
        <url-pattern>/inventory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUsersServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCategoriesServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>user</welcome-file>
    </welcome-file-list>
</web-app>
